<%- include("header") -%>

<div class="box" id="heading">
    <h1> <%= kindOfDay %></h1>
</div>

<div class="box">
        <% newTask.forEach((Task) => { %>
        <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkbox" onChange="this.form.submit()" value="<%= Task._id %>">
            <p><%= Task.task %></p>
        </div>
        <input type="hidden" name="listName" value="<%= kindOfDay %>">
    </form>

        <% }) %> 

        <form class="item" action="/" method="post">
            <input type="text" name="task" placeholder="Enter Task" autocomplete="off">
            <button type="submit" name="list" value=<%= kindOfDay %>>+</button>
        </form>
</div>

<%- include("footer") -%>